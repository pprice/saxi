{
  "name": "saxi",
  "version": "0.14.0",
  "description": "Drive the AxiDraw pen plotter",
  "homepage": "https://github.com/nornagon/saxi",
  "repository": "github:nornagon/saxi",
  "bugs": "https://github.com/nornagon/saxi/issues",
  "keywords": [
    "axidraw",
    "plotter",
    "pen plotter",
    "eggbot",
    "serial",
    "hardware",
    "robot"
  ],
  "main": "index.js",
  "bin": {
    "saxi": "cli.js"
  },
  "scripts": {
    "prebuild": "npm run lint",
    "lint": "eslint --cache --ext .ts,.tsx src",
    "build": "npm run build:server && webpack --mode=production",
    "prepare": "rimraf dist && npm run build",
    "prestart": "npm run build",
    "start": "node cli.js",
    "build:server": "tsc -p tsconfig.server.json",
    "dev": "npm run build:server && concurrently \"npm:dev:webpack\" \"npm:dev:cli\"",
    "dev:webpack": "webpack --mode=development -w",
    "dev:cli": "node cli.js",
    "deploy": "rimraf dist/ui && IS_WEB=1 webpack --mode=production && gh-pages -d dist/ui",
    "test": "jest"
  },
  "author": "Jeremy Rose <nornagon@nornagon.net>",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@rehooks/component-size": "^1.0.2",
    "@serialport/binding-mock": "^9.2.4",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/jest": "^27.5.0",
    "@types/node": "^16.11.33",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@types/serialport": "^8.0.0",
    "@types/w3c-web-serial": "^1.0.2",
    "@types/ws": "^8.5.3",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "color-interpolate": "^1.0.5",
    "colormap": "^2.3.2",
    "concurrently": "^7.1.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.14.0",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^6.2.0",
    "gh-pages": "^3.2.3",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^28.0.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "style-loader": "^3.3.1",
    "ts-jest": "^28.0.0",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "worker-loader": "^3.0.8"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "flatten-svg": "^0.2.1",
    "optimize-paths": "^1.2.0",
    "serialport": "^9.2.0",
    "svgdom": "0.0.21",
    "wake-lock": "^0.2.0",
    "web-streams-polyfill": "^3.0.3",
    "ws": "^8.6.0",
    "yargs": "^17.4.1"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFiles": ["./jest.setup.ts"],
    "globals": {
      "ts-jest": { 
        "tsconfig": "tsconfig.server.json"
      }
    }
  },
  "files": [
    "/dist",
    "cli.js"
  ]
}
